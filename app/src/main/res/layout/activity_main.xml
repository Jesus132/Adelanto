<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.179"
            android:id="@+id/txtCarreras"/>
    <Button
            android:text="Generar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/BTGenerar" android:layout_marginTop="67dp"
            app:layout_constraintTop_toBottomOf="@+id/SPCarreras" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="156dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="353dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="167dp"/>
    <Spinner
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:id="@+id/SPCarreras" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="239dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="67dp" app:layout_constraintBottom_toTopOf="@+id/BTGenerar"/>

</android.support.constraint.ConstraintLayout>